{
  "private": true,
  "build": {
    "productName": "iTunesify Remote",
    "appId": "xyz.meriw.itunesify.mac",
    "app-category-type": "public.app-category.utilities",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  },
  "devDependencies": {
    "electron-builder": "^5.10.5",
    "electron-prebuilt": "^1.2.5"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "./node_modules/.bin/electron app",
    "archive": "./node_modules/.bin/build --mac",
    "pack": "./node_modules/.bin/build --mac --dir"
  }
}
